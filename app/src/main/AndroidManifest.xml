<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_film_hunt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_film_hunt_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.FilmHunt"
        tools:targetApi="31">
        <activity
            android:name=".Watchlist"
            android:exported="false" />
        <activity
            android:name=".UserAccount"
            android:exported="false"
            android:theme="@style/Base.Theme.FilmHunt" />
        <activity
            android:name=".Settings"
            android:exported="false"
            android:theme="@style/Base.Theme.FilmHunt" />
        <activity
            android:name=".Dashboard"
            android:exported="false"
            android:theme="@style/Base.Theme.FilmHunt" />
        <activity
            android:name=".VerifyEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.FilmHunt" />
        <activity
            android:name=".Register"
            android:exported="false"
            android:theme="@style/Theme.FilmHunt" />
        <activity
            android:name=".Login"
            android:exported="false"
            android:theme="@style/Theme.FilmHunt" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>